@page
@model BibleAppEF.Areas.Identity.Pages.Admin.Users.EditModel
@{
    <form method="post">
        <div class="row">
            <div class="col">
                <label>User Name: </label>
            </div>
            <div class="col">
                @Model.GetUser.UserName
            </div>
            <div class="col">
                <input type="text" name="name" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Email: </label>
            </div>
            <div class="col">
                @Model.GetUser.Email
            </div>
            <div class="col">
                <input type="email" name="email" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label>Role: </label>
            </div>
            <div class="col">
                <select asp-for="selectedRole" asp-items="Model.Options" name="role">
                    <option value="">Select a Role</option>
                  
                </select>

            </div>
        </div>
        <div class="row">
            <input type="hidden" name="userid" value="@Model.GetUser.Id"/>
            <button asp-page-handler="Update">Update</button>
        </div>
    </form>
}
