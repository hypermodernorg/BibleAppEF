@page
@model BibleAppEF.Areas.Identity.Pages.Account.Manage.PreferencesModel

@{
    ViewData["ActivePage"] = ManageNavPages.Preferences;

    <h4>Select Versions</h4>

    <form method="post">
        @for (var i = 0; i < Model.VersionList.Count; i++)
        {
            <div class="row">
                <div class="col">
                    <div class="row custom-control custom-checkbox">
                        <div class="col">
                            <input type="checkbox" asp-for="@Model.VersionList[i].Selected" />
                            <label asp-for="@Model.VersionList[i].Selected">@Model.VersionList[i].Version</label>
                            <input type="hidden" asp-for="@Model.VersionList[i].Version" />
                        </div>
                    </div>
                </div>
            </div>
        }

            <hr />
            <div class="row">
                <div class="col">
             
                    <button asp-page-handler="Update" class="btn btn-primary">Update</button>
                </div>

            </div>
    </form>
}

