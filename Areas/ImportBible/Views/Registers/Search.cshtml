@{  var availableVersions = ViewData.Model;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-4 collapse show" id="CollapseSearchForm">
            <div class="bg-search-results p-2" >
                <h3>Bible Search</h3>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Version</label>
                            <select class="form-control" id="versionSelect" onchange="onchangeVersion()">
                                <option></option>
                                @foreach (var item in availableVersions)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Chapter</label>
                            <select class="form-control" id="chapterSelect" onchange="onchangeChapter()">
                            </select>
                        </div>

                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Book</label>
                            <select class="form-control" id="bookSelect" onchange="onchangeBook()">
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Verse</label>
                            <select class="form-control" id="verseSelect">
                            </select>
                        </div>

                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">

                        <div class="form-group">
                            <label class="control-label">Search for..</label>
                            <input type="text" id="SearchWords" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Conditions</label>
                            <div class="custom-control custom-radio">
                                <input type="radio" id="searchPhrase" name="wordRadio" class="custom-control-input" value="phrase" checked="">
                                <label class="custom-control-label" for="searchPhrase">Phrase</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input type="radio" id="searchAnd" name="wordRadio" class="custom-control-input" value="and">
                                <label class="custom-control-label" for="searchAnd">And</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input type="radio" id="searchOr" name="wordRadio" class="custom-control-input"value="or">
                                <label class="custom-control-label" for="searchOr">Or</label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">

                        <div class="form-group">
                            <label class="control-label">...but NOT</label>
                            <input type="text" id="NotWords" class="form-control" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Conditions</label>
                            <div class="custom-control custom-radio">
                                <input type="radio" id="notPhrase" name="notRadio" class="custom-control-input" checked="" value="phrase">
                                <label class="custom-control-label" for="notPhrase">Phrase</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input type="radio" id="notAnd" name="notRadio" class="custom-control-input" value="and">
                                <label class="custom-control-label" for="notAnd">And</label>
                            </div>
                            @*<div class="custom-control custom-radio">
                                <input type="radio" id="notOr" name="notRadio" class="custom-control-input" value="or">
                                <label class="custom-control-label" for="notOr">Or</label>
                            </div>*@
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <button type="button" class="btn btn-primary bg-dark" onclick="SubmitSearch()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="col">
            <div class="bg-search-results p-2">
                <div class="row">
                    <div class="col-2 text-left">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="customSwitch1" checked="" data-toggle="collapse" data-target="#CollapseSearchForm" aria-expanded="true" >
                            <label class="custom-control-label" for="customSwitch1"></label>
                        </div>
                    </div>
                    <div class="col-10 text-right">
                        <h3 id="versionHeader"></h3>
                    </div>
                    
                </div>

                <div id="bibleText"></div>

            </div>
        </div>

    </div>





</form>