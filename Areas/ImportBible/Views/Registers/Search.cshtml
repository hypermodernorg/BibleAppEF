@{  var availableVersions = ViewData.Model;
    Layout = "~/Views/Shared/_Layout.cshtml";
    //@*asp-action="Create"*@ 
}

<form enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-4">
            <div class="card p-3">
                <h3>Bible Search</h3>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Version</label>
                            <select class="form-control" id="versionSelect" onchange="onchangeVersion()">
                                @foreach (var item in availableVersions)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Chapter</label>
                            <select class="form-control" id="chapterSelect" onchange="onchangeChapter()">
                            </select>
                        </div>

                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Book</label>
                            <select class="form-control" id="bookSelect" onchange="onchangeBook()">
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Verse</label>
                            <select class="form-control" id="verseSelect">
                            </select>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Word or Phrase Search</label>
                            <input type="text" id="SearchWords" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <button type="button" class="btn btn-primary bg-dark" onclick="SubmitSearch()">Submit</button>
                        </div>
                    </div>
                </div>
             </div>
        </div>
    
        <div class="col-sm-8">
            <div class="card p-3 min-vh-100">
                <div class="row">
                    <div class="col text-right">
                        <h3 id="versionHeader"></h3>
                    </div>
                    
                </div>

                <div id="bibleText"></div>

            </div>
        </div>

    </div>





</form>