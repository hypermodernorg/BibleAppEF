@using Microsoft.AspNetCore.Identity
@using BibleAppEF.Areas.Identity.Data

@inject SignInManager<BibleAppEFUser> SignInManager
@inject UserManager<BibleAppEFUser> UserManager

<ul class="navbar-nav">
   @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a id="manage" class="nav-link text-white dropdown-toggle" data-toggle="dropdown" role="button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User)</a>
            <div class="dropdown-menu bg-dark">
                <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account Management</a>
                <a class="nav-link" asp-area="ImportBible" asp-controller="Registers" asp-action="Index">Versions</a>
                <a class="nav-link" asp-area="ImportBible" asp-controller="Registers" asp-action="Create">Import Bible</a>
                <a class="nav-link" asp-area="Identity" asp-page="/Admin/Roles/Index"  title="Roles">View Roles</a>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
                </form>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
