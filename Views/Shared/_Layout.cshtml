<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibleApp</title>
    <link rel="stylesheet" href="~/css/custom.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/lux.css" />*@
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/flatly.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons-1.2.1/font/bootstrap-icons.css" />
</head>
@{
    // Border top depending on if view is Search
    var topBorder = "";
    if (ViewBag.IsSearch == true)
    {
        topBorder = "rounded-top-lg";
    }
    else
    {
        topBorder = "border-top-left";
    }
}
<body class="body-bg">
    <div class="container-lg p-0 mt-5">
        <div class="row">


            <div class="col p-0 bg-light @topBorder">
                <div class="row">
                    <div class="col">
                        <nav class="navbar navbar-light navbar-expand-lg pt-3 pb-3">
                            <a class="navbar-brand" href="#">BIBLEAPP</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarColor01">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav.item active">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="ImportBible" asp-controller="Registers" asp-action="Search">Search</a>
                                    </li>
                                </ul>
                                <partial name="_LoginPartial" />
                            </div>
                        </nav>
                    </div>
                </div>

                @if (ViewBag.IsHome == true)
                {
                    <div class="row">
                        <div class="col">
                            <partial name="_CarouselPartial" />
                        </div>
                    </div>
                }

            </div>

            @if (ViewBag.IsHome == true)
            {
                <partial name="_SocialPartial" />
            }


        </div>
    </div>

    @if (ViewBag.IsHome == true)
    {
        <div class="container-lg p-0">
            <div class="row">
                <div class="col bg-light pt-5">
                    <h1 class="text-center">Welcome</h1>
                </div>
            </div>
        </div>
    }



    <div class="container-lg main-area p-0">
        <div class="row">
            <div class="col  bg-light">
                <main role="main" class="mt-5 mb-5">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <partial name="_FooterLinksPartial" />
    <partial name="_FooterPartial" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
