<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibleApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/lux.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/flatly.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100 mb-n1 body-bg">
    <header class="">
        <div class="container bg-header mt-5 rounded-top border-0">
            <nav class="navbar navbar-expand-lg bg-header border-0">
                <a class="navbar-brand" href="#">BIBLEAPP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="ImportBible" asp-controller="Registers" asp-action="Search">Search</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
    </header>


    <div class="container pt-4 bg-light border-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <partial name="_FooterPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
